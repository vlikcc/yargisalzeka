# ================================
# YARGISAL ZEKA - Production Environment Variables
# ================================

# ================================
# ENVIRONMENT CONFIGURATION
# ================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ================================
# MONGODB ATLAS AYARLARI (ZORUNLU)
# ================================
# MongoDB Atlas connection string - PRODUCTION DATABASE
MONGODB_CONNECTION_STRING=mongodb+srv://prod_user:<STRONG_PASSWORD>@yargisalzeka-prod.mongodb.net/?retryWrites=true&w=majority&appName=yargisalzeka-prod
MONGODB_DATABASE_NAME=yargisalzeka_prod

# ================================
# GOOGLE GEMINI AI AYARLARI (ZORUNLU)
# ================================
# Production API key - farklı key kullanın
GEMINI_API_KEY=your_production_gemini_api_key_here

# ================================
# SECURITY CONFIGURATION
# ================================
# JWT Secret - MUTLAKA DEĞİŞTİRİN - 32+ karakter
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-for-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# CORS VE HOST AYARLARI
# ================================
# Production domain'ler
ALLOWED_HOSTS=yargisalzeka.com,www.yargisalzeka.com,api.yargisalzeka.com,*
CORS_ORIGINS=https://yargisalzeka.com,https://www.yargisalzeka.com,*

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
USER_RATE_LIMIT=50/hour

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# ================================
# API AYARLARI
# ================================
API_TITLE=Yargısal Zeka API
API_VERSION=2.1.0
API_DESCRIPTION=Yapay Zeka Destekli Yargıtay Kararı Arama Platformu (Production)

# ================================
# MICROSERVICE URLS
# ================================
SCRAPER_API_URL=http://scraper-api:8001
SELENIUM_GRID_URL=http://selenium-hub:4444/wd/hub

# ================================
# SSL/TLS CONFIGURATION
# ================================
SSL_CERTFILE=/app/ssl/fullchain.pem
SSL_KEYFILE=/app/ssl/privkey.pem

# ================================
# MONITORING CONFIGURATION
# ================================
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# ================================
# PERFORMANCE TUNING
# ================================
# MongoDB connection pool
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# Worker processes for Gunicorn
WORKERS=4
WORKER_CONNECTIONS=1000

# Cache settings (in seconds)
KEYWORDS_CACHE_DURATION=2592000  # 30 days
SEARCH_CACHE_DURATION=604800     # 7 days
AI_ANALYSIS_CACHE_DURATION=2592000  # 30 days

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yargisalzeka.com
SMTP_PASSWORD=your_email_app_password
FROM_EMAIL=noreply@yargisalzeka.com

# ================================
# ERROR REPORTING (Optional)
# ================================
SENTRY_DSN=your_sentry_dsn_here

# ================================
# PAYMENT INTEGRATION (Future)
# ================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret