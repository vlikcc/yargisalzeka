# Production Environment Variables
# Bu dosya .gitignore'da olmalÄ± ve asla commit edilmemeli!

# Google Gemini AI
GEMINI_API_KEY=PRODUCTION_GEMINI_API_KEY_HERE

# MongoDB Atlas
MONGODB_CONNECTION_STRING=mongodb+srv://PRODUCTION_USERNAME:PRODUCTION_PASSWORD@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=yargisalzeka

# API URLs (Docker compose internal network)
SCRAPER_API_URL=http://scraper-api:8001
SELENIUM_GRID_URL=http://selenium-hub:4444/wd/hub

# Security
API_SECRET_KEY=GENERATE_STRONG_SECRET_KEY_FOR_PRODUCTION
JWT_SECRET_KEY=GENERATE_STRONG_JWT_SECRET_FOR_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings (Production)
CORS_ORIGINS=["https://yargisalzeka.com","https://www.yargisalzeka.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST"]
CORS_ALLOW_HEADERS=["Authorization","Content-Type"]

# Rate Limiting
USER_RATE_LIMIT=10/minute
GLOBAL_RATE_LIMIT=1000/hour

# Logging
LOG_LEVEL=WARNING
LOG_FILE_PATH=/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Performance
MAX_PAGES_TO_SEARCH=5
TARGET_RESULTS_PER_KEYWORD=3
REQUEST_TIMEOUT=30
MAX_WORKERS=4

# Frontend API URL (Production)
VITE_API_URL=https://api.yargisalzeka.com

# Environment
ENVIRONMENT=production